# ==============================================================================
# FYERS 1MIN STRATEGY - ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ==============================================================================
# FYERS API CREDENTIALS
# ==============================================================================
# Get these from: https://myapi.fyers.in/dashboard

FYERS_APP_ID=your-app-id-here
FYERS_APP_SECRET=your-app-secret-here
FYERS_REDIRECT_URI=http://localhost:5000/callback
FYERS_API_URL=https://api-t1.fyers.in/api/v3

# ==============================================================================
# AUTHENTICATION TOKENS (Auto-generated - leave empty)
# ==============================================================================

FYERS_ACCESS_TOKEN=
FYERS_REFRESH_TOKEN=
TOKEN_EXPIRY=

# ==============================================================================
# STRATEGY CONFIGURATION
# ==============================================================================

# Stock Selection Criteria
MIN_BODY_PERCENT=0.8
MIN_BODY_RATIO=0.75

# Risk Management
RISK_REWARD_RATIO=2.0
MAX_POSITIONS=5
CAPITAL_PER_TRADE=50000
MAX_DAILY_LOSS=5000
RISK_PER_TRADE=1000

# ==============================================================================
# TRADING HOURS
# ==============================================================================

MARKET_OPEN_TIME=09:15
MARKET_CLOSE_TIME=15:30
SCAN_TIME=09:00

# ==============================================================================
# ENVIRONMENT SETTINGS
# ==============================================================================

ENVIRONMENT=development
PAPER_TRADING=true
DEBUG=true

# ==============================================================================
# LOGGING
# ==============================================================================

LOG_LEVEL=INFO
LOG_FILE=./logs/strategy.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ==============================================================================
# DATABASE
# ==============================================================================

DB_PATH=./data/trades.db

# ==============================================================================
# OPTIONAL: NOTIFICATIONS
# ==============================================================================

# Email Notifications
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_EMAIL=

# Telegram Notifications
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ==============================================================================
# DASHBOARD (Optional)
# ==============================================================================

DASHBOARD_PORT=5000
DASHBOARD_HOST=0.0.0.0
DASHBOARD_SECRET_KEY=change-this-secret
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=change-this-password
